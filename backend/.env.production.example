# Configuración de Producción - Backend
# Copiar a .env.production en el servidor

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/basketball_team_prod
# Para MongoDB Atlas: MONGO_URI=mongodb+srv://usuario:password@cluster.mongodb.net/basketball_team

# JWT Configuration
JWT_SECRET=tu_jwt_secret_super_seguro_para_produccion_cambiar_esto
JWT_EXPIRE=7d

# Redis Configuration (opcional para cache)
REDIS_URL=redis://localhost:6379
# Para Redis Cloud: REDIS_URL=redis://username:password@hostname:port

# CORS Configuration
FRONTEND_URL=https://tu-dominio-frontend.com
ALLOWED_ORIGINS=https://tu-dominio-frontend.com,https://www.tu-dominio-frontend.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=tu_session_secret_super_seguro_cambiar_esto

