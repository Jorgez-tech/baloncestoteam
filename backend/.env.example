# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration for Docker environment
# The hostname 'mongo' refers to the service name in docker-compose.yml
MONGO_URI=mongodb://mongo:27017/basketball-team
MONGODB_TEST_URI=mongodb://localhost:27017/basketball-team-test

# JWT Configuration
JWT_SECRET=your_very_secure_secret_change_in_production
JWT_EXPIRE=7d

# Redis Configuration (optional for cache and sessions)
# The hostname 'redis' refers to the service name in docker-compose.yml
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASS=

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# CORS Configuration
FRONTEND_URL=http://localhost:3000
