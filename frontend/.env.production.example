# Configuración de Producción - Frontend
# Copiar a .env.production en el proyecto

# API Configuration
REACT_APP_API_URL=https://tu-backend-api.com/api/v1
REACT_APP_API_TIMEOUT=10000

# App Configuration
REACT_APP_APP_NAME=Basketball Team
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# Analytics (opcional)
# REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# REACT_APP_HOTJAR_ID=xxxxxxx

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DEBUG=false

# Social Media (opcional)
# REACT_APP_FACEBOOK_APP_ID=xxxxxxxxx
# REACT_APP_TWITTER_HANDLE=@basketball_team

# Error Tracking
# REACT_APP_SENTRY_DSN=https://tu-sentry-dsn-frontend

# CDN Configuration (opcional)
# REACT_APP_CDN_URL=https://cdn.tu-dominio.com
# REACT_APP_IMAGES_BASE_URL=https://images.tu-dominio.com

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
