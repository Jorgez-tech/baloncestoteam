// Frontend ESLint config
{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": { "jsx": true },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {"react": {"version": "detect"}},
  "plugins": [],
  "rules": {
    "no-unused-vars": "warn"
  }
}
